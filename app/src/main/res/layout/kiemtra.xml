<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nendoan1">
<TextView
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:text="Đâu là con mèo?"
    android:textSize="35sp"
    android:gravity="center"
    android:background="@drawable/bovien"
    android:layout_gravity="center"
    android:layout_marginTop="80dp"
    android:id="@+id/tvloihoi"
    android:textColor="#15288F"
    android:fontFamily="@font/blossom"/>
    <TableLayout
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TableRow
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >
            <ImageButton
                android:onClick="OnClick"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:id="@+id/dapanA"
                android:scaleType="fitXY"
                android:background="@drawable/bovien"/>
            <ImageButton
                android:onClick="OnClick"
                android:layout_marginLeft="20dp"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:id="@+id/dapanB"
                android:scaleType="fitXY"
                android:background="@drawable/bovien"/>
        </TableRow>
        <TableRow
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            >
            <ImageButton
                android:onClick="OnClick"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:scaleType="fitXY"
                android:id="@+id/dapanC"
                android:background="@drawable/bovien"/>
            <ImageButton
                android:onClick="OnClick"
                android:layout_marginLeft="20dp"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:scaleType="fitXY"
                android:id="@+id/dapanD"
                android:background="@drawable/bovien"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/loa"
            android:background="@drawable/tron"
            android:id="@+id/nghetiengkeu"/>
        <ImageButton
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/doc"
            android:background="@drawable/tron"
            android:id="@+id/nghecauhoi"/>
        <ImageButton
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ttrangchu"
            android:background="@drawable/tron"
            android:id="@+id/trangchu"/>
    </LinearLayout>
</LinearLayout>